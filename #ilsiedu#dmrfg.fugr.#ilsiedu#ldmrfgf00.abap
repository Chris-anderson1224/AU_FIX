FORM READ_SINGLE_/ILSIEDU/VDMRM.
  SELECT SINGLE * FROM /ILSIEDU/DMRM WHERE
RUNMODE = /ILSIEDU/VDMRM-RUNMODE .
/ILSIEDU/VDMRM-RUNMODE =
/ILSIEDU/DMRM-RUNMODE .
/ILSIEDU/VDMRM-CLASS =
/ILSIEDU/DMRM-CLASS .
/ILSIEDU/VDMRM-DYNNR =
/ILSIEDU/DMRM-DYNNR .
/ILSIEDU/VDMRM-ACTIVE =
/ILSIEDU/DMRM-ACTIVE .
    SELECT SINGLE * FROM /ILSIEDU/DMRMT WHERE
RUNMODE = /ILSIEDU/DMRM-RUNMODE AND
